<div style="margin-left: 380px;">
  <h1 class="form_heading">Log In</h1>
  <div class="row gx-12">
    <div class="card mb-3" style="width: 480px; height: 380px;background-color: #cadcfc;">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form_spacing">
            <b><%= f.label :email, class: 'form-label' %></b>
            <%= f.email_field :email, class: 'form-control input_field', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field form_spacing">
            <b><%= f.label :password, class: 'form-label' %></b>
            <%= f.password_field :password, class: 'form-control input_field', autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field form_spacing">
              <%= f.check_box :remember_me %>
              <b><%= f.label :remember_me %></b>
            </div>
          <% end %>

          <div class="actions form_spacing">
            <%= f.submit "Log in", class: "login_button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>